/* pages/index/index.wxss */
/* 顶部搜索栏 */
.top-search {
  width: 100%;
  height: 80rpx;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  padding: 10rpx 20rpx;
}
.top-search .input {
  width: 710rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: rgba(255,255,255,0.6);
  border-radius: 40rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}
.top-search .input view {
  color: #fff;
}
.top-search .input view.icon-sousuo {
  font-size: 36rpx;
}
/* 顶部搜索框box-shaow */
.boxshaow {
  box-shadow: 0px 0px 2px #eee;
}
 /* 热销banner */
 .hot-banner {
  width: 750rpx;
  height: 197rpx;
 }


