/* pages/categories/categories.wxss */
page {
  width: 100%;
  height: 100%;
}
.search-row {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  width: 100%;
  height: 100rpx;
}
.class-container {
  width: 100%;
  height: 100%;
}
.flex-row {
  display: flex;
  width: 100%;
  height: 100%;
  padding-top: 100rpx;
}
.flex-row .left {
  width: 250rpx;
  height: 100%;
  background-color: #eee;
}
.flex-row .right {
  width: 500rpx;
  height: 100%;
  position: relative;
  padding-top: 110rpx;
}
.sort-row {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  z-index: 111;
}
scroll-view {
  width: 100%;
  height: 100%;
}
.left .item {
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  align-items: center;
}
.left .item text {
  padding-left: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-left: 2px solid transparent;
}
.left .item.active {
  background-color: #fff;
}
.left .item.active text {
  border-left: 2px solid #f9421e;
  color: #f9421e;
  background-color: #fff;
}