/* pages/authorization/authorization.wxss */
page {
  background-color: #eee;
}
.title {
  text-align: center;
  padding: 80rpx 0;
}
.container image {
  width: 150rpx;
  margin-bottom: 50rpx;
}
.info {
  width: 500rpx;
  margin: 0 auto;
  text-align: left;
}
.info > view:nth-child(1) {
  font-weight: 900;
  margin: 10rpx 0;
}
.info > view:nth-child(2) {
  color: #666;
}
.btn {
  background-color: #F9421E;
  color: #fff;
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 40rpx;
  margin-top: 70rpx;
}