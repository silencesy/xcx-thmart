/* pages/goods-details/goods-details.wxss */
@import "/wxParse/wxParse.wxss";
page {
  background-color: #eee;
}
.top-swiper {
  position: relative;
}
.top-swiper .icon {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  z-index: 999;
}
.top-swiper .icon.sale {
  width: 64rpx;
  height: 32rpx;
}
.top-swiper .icon.group {
  width: 128rpx;
  height: 24rpx;
}
.info {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx;
}
.info .name {
  font-weight: 900;
}
.info .price-range {
  color: #f24827;
}
.Specifications {
  background-color: #fff;
  margin: 20rpx 0;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}
.iconfont.icon-combinedshapefuben {
  color: #dfdfdf;
}
.details-title {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
  border-bottom: 1px solid #dfdfdf; 
}
.info-content {
  padding:  24rpx 24rpx 120rpx 24rpx;   
}
.goods-bottom-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: stretch;
}
.goods-bottom-btn view:nth-last-child(n+3) {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.goods-bottom-btn view:nth-last-child(n+3) .iconfont {
  font-size: 40rpx;
  color: #919191;
}
.goods-bottom-btn view:nth-last-child(n+3) view:nth-child(1) {
  flex: 1.1;
  padding-top: 10rpx;
}
.goods-bottom-btn view:nth-last-child(n+3) view:nth-child(2) {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}
.goods-bottom-btn .add-cart {
  flex: 2;
  background-color: #f6b12b;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.goods-bottom-btn .buy {
  flex: 1.6;
  background-color: #f6442b;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.single-info {
  display: flex;
  position: relative;
}
.single-info image {
 width: 160rpx;
 height: 160rpx;
 border-radius: 8rpx;
 position: absolute;
 left: 20rpx;
 top: -30rpx;
 box-shadow: 1px 0 10px rgba(0,0,0,.2);
}
.single-info .info-text {
  margin-left: 200rpx;
  padding: 10rpx 0;
  width: 460rpx;
}
.single-info .info-text view {
  text-align: left;
}
.single-info .iconfont.icon-guanbi {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 40rpx;
}
.sku-box {
  height: 500rpx;
}
.count {
  display: flex;
  padding: 20rpx;
  line-height: 54rpx;
  justify-content: space-between;
}
.done-btn {
  padding: 0 20rpx 20rpx 20rpx;
}
.buy-done {
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  background-color: #f9421e;
  border-radius: 40rpx;
}
.cart-done {
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  background-color: #f6b12b;
  border-radius: 40rpx;
}
.cart-buy {
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
}
.cart-buy view {
  flex: 1;
  color: #fff;
}
.cart-buy view:nth-child(1) {
  background-color: #f6b12b;
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}
.cart-buy view:nth-child(2) {
  background-color: #f9421e;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}