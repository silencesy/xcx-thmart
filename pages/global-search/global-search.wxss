/* pages/global-search/global-search.wxss */
page {
  background-color: #eee;
  padding-top: 190rpx;
}
.top-row {
  background-color: #fff;
  width: 100%;
  height: 180rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}
.search-row {
  width: 100%;
  background-color: #fff;
}
.search-input-box {
  height: 80rpx;
  background-color: #fff;
}
.search-input-box {
  padding: 20rpx 20rpx 0 20rpx;
  display: flex;
  align-items: center;
}
.search-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  color: #666;
}
.search-input-box input {
  background-color: #EEE;
  width: 100%;
  height: 60rpx;
  padding-left: 40rpx;
  border-radius: 40rpx;
}
.class-box {
  display: flex;
  border-bottom: 1px solid #dfdfdf;
}
.class-box > view {
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  height: 100rpx;
}
.class-box > view.active {
  color: #f24827;
}
.class-box > view.active text {
  border-bottom: 2px solid #f24827;
  line-height: 100rpx;
  height: 100rpx;
  display: inline-block;
}