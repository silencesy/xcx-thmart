/* pages/guide/guide.wxss */
page {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 100%;
  padding-top: 100rpx;
}
.article-container {
  width: 100%;
  height: 100%;
}
.content {
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.content swiper,swiper-item,scroll-view {
  width: 100%;
  height: 100%;
}
.article-container .title {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  border-bottom: 1px solid #dfdfdf;
  background-color: #fff;
  z-index: 999;
}
.article-container .title view {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
.article-container .title view.active {
  color: #f9421e;
  position: relative;
}
.article-container .title view text {
  font-size: 32rpx;
}
.article-container .title view.active text {
  font-size: 32rpx;
  border-bottom: 2px solid red;
  display: inline-block;
  height: 100rpx;
}
/* 隐藏滑块下面的指示条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.goods-container {
  padding: 20rpx;
}
.goods-container .item {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  display: flex;
  border-radius: 8rpx;
  border: 1px solid #dfdfdf;
}
.goods-container .item image {
  width: 150rpx;
  height: 150rpx;
}
.goods-container .item .info {
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 520rpx;
}
.goods-container .item .info .bottom {
  display: flex;
  justify-content: space-between;
}
.goods-container.shop .info {
  align-self:center;
}