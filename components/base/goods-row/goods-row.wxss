/* components/base/goods-row/goods-row.wxss */
.goods-container {
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.item-goods {
  border: 1px solid #dfdfdf;
  border-radius: 4px;
  overflow: hidden;
  margin: 0 10rpx 20rpx 10rpx;
  width: 223rpx;
  height: 375rpx;
  background-color: #fff;
  position: relative;
}
/* .item-goods:nth-last-child(-n+3) {
  margin-bottom: 0;
} */

.item-goods.rows2 {
  width: 345rpx;
  height: 495rpx;
}
.item-goods.rows2 image {
  width: 345rpx;
  height: 345rpx;
}
.item-goods.rows4 {
  width: 220rpx;
  height: 375rpx;
}
.item-goods.rows4 image {
  width: 220rpx;
  height: 220rpx;
}
.item-goods:nth-child(2n) {
  margin-bottom: 0;
}
.item-goods image {
  width: 223rpx;
  height: 223rpx;
}
.item-goods .goods-name {
  display: -webkit-box;
  overflow: hidden;
  height: 84rpx;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0 20rpx;
}
.item-goods .goods-price {
  display: flex;
  justify-content: space-around;
}
.theme-color {
  color: #f24827!important;
}
.item-goods .icon {
  position: absolute;
  top: 5rpx;
  left: 5rpx;
  z-index: 999;
}
.item-goods .icon.sale {
  width: 64rpx;
  height: 32rpx;
}
.item-goods .icon.group {
  width: 128rpx;
  height: 24rpx;
}