/* components/base/search-row/search-row.wxss */
.search-container {
  width: 100%;
  height: 100rpx;
  padding: 20rpx;
  position: relative;
  background-color: #fff;
}
.bottom-line {
  border-bottom: 1px solid #dfdfdf;
}
.search-container .input {
  height: 60rpx;
  line-height: 60rpx;
  background-color: #eee;
  border-radius: 40rpx;
  padding-left: 30rpx;
  color: #666;
}
.iconfont.icon-sousuo {
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1000;
}